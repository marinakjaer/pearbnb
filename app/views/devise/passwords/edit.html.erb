<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="text-center">
        <h2>Change your password</h2>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>
        <div class="form-box">
          <div class="form-inputs">
            <%= f.input :password,
                        label: "New password",
                        required: true,
                        autofocus: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" }, input_html: {class: 'form-input'} %>
            <%= f.input :password_confirmation, label: "Confirm your new password", required: true, input_html: {class: 'form-input'} %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Change my password", class:"btn btn-primary button-size" %>
          </div>
          <%= render "devise/shared/links" %>
      <% end %>
      </div>
    </div>
  </div>
</div>


