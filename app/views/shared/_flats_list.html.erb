<h3 class="text-center inbox-title">Your flats</h3>
  <div class="inbox">
    <p><% current_user.bookings.reverse_order.each do |b|%></p>
    <% unless b.flat.user == current_user %>
    <div class="inbox-card-visitor">
      <div style="margin: 0 auto;">
        <div class="sm-flat-img" style="background-image: url('<%= b.flat.photos[0] %>');">
        </div>
        <div class="big">
          flat name
        </div>
      </div>
      <div class="inbox-info">
        <div class="big">
          flat city
        </div>
        <div class="small"> <%= "#{b.check_in.strftime("%B %d, %Y")} - #{b.check_out.strftime("%B %d, %Y")}" %>
        </div>
      </div>
      <div class="inbox-info">
        <div class="big">
          <% if b.status == false%>
          <div class="pending">Pending</div>
          <% else %>
          Confirmed
          <% end %>
        </div>
      </div>
    </div>
    <hr width="50%">
    <% else %>
    <% end %>
    <% end %>
  </div>
