

<div class="page-container">
  <%= cl_image_tag @flat.photos[0], crop: :fill, class:"flat-picture" %>
    <div class="container">
      <div class="flat">
      <div class="flat-content">
        <h1><%= @flat.name %></h1>
        <h3><%= @flat.address %></h3>
        <h3><%= @flat.city %></h3>
        <ul class="list-inline">
          <li><p><i class="fas fa-users"></i> <%= @flat.max_guest %> guests</p></li>
          <li><p><i class="fas fa-euro-sign"></i> <%= @flat.price_per_night %> per night</p></li>
        </ul>
        <div class="flat-description">
          </div>
          <p><%= @flat.description %></p>
      </div>
      <div class="sticky-form">
      <div class="form-style">
    <form action="/flats/results" method="get">
      <div class="price"></div>
      <strong><p class="flat-price-on-form"><i class="fas fa-euro-sign"></i> <%= @flat.price_per_night %> per night</p></strong>
      <hr class="styling-hr">
    <div class="home-form-dates">


        <div class="home-form-arrival">
          <label for="arrival">Dates</label> <br>
          <input class="date" type="date" name="arrival">
        </div>

        <div class="home-form-departure">
          <label for="departure"></label> <br>
          <input class ="date" type="date" name="departure">
        </div>
        <hr class="styling-hr">
         <a class='btn btn-primary centered-btn' href="/flats/<%="#{@flat.id}"%>/bookings/new?arrival=<%="#{params[:arrival]}"%>&departure=<%="#{params[:departure]}"%>" role='button'>Book Now!</a>
      </form>
      </div>
      </div>
    </div>






  </div>
    <br>
  <%= link_to "Back to search Results", "/flats/results", class: "btn btn-primary search-button"%>
  <br>
      <div class="host-buttons">
        <ul class="list-inline">
          <li><% if current_user == @flat.user %>
      <%= link_to "Edit Flat", "/flats/#{params[:id]}/edit", class: "btn btn-primary" %></li>
          <li><%= link_to "Delete Flat", flat_path(@flat),
            method: :delete,
            data: { confirm: "Are you sure?" }, class: "btn btn-primary" %></li>
         <br>
        </ul>
      </div>
  <% end %>
  </div>
</div>



