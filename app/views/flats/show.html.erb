<div class="flat-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/montreal');">
  </div>

<h1><%= @flat.address %></h1>
<h3><%= @flat.city %></h3>
<p><%= @flat.description %></p>

<%= cl_image_tag @flat.photos[0], height: 100, width: 100, crop: :fill %>
<%= cl_image_tag @flat.photos[1], height: 100, width: 100, crop: :fill %>

<br>
<%= link_to "Back to search Results", "/flats/results"%>
<br>

<% if current_user == @flat.user %>
<%= link_to "Edit Flat", "/flats/#{params[:id]}/edit" %>
<br>
<%= link_to "Delete Flat", flat_path(@flat),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>
